{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Electronic Data Interchange (X12)",
  "patterns": [
    {
      "include": "#segments"
    }
  ],
  "repository": {
    "segments": {
      "name": "meta.segment.x12",
      "begin": "",
      "end": "\\~",
      "patterns": [
        {
          "name": "meta.segment.invalid-id.x12",
          "match": "^([A-Z0-9]{1}|[A-Z0-9]{4,})\\*",
          "captures": {
            "1": {
              "name": "invalid.illegal.segment.id.x12"
            }
          }
        },
        {
          "name": "meta.segment.id.x12",
          "match": "([A-Z0-9]{2,3})(?=\\*)",
          "captures": {
            "1": {
              "name": "storage.type.segment.id.x12"
            }
          }
        },
        {
          "name": "meta.segment.data-element.x12",
          "match": "(\\*)([\\w+\\(\\)'&\"! ,\\-\\./;\\?=%@\\[\\]_\\{\\}\\\\|<#$]*)",
          "captures": {
            "1": {
              "name": "keyword.control.segment.data-element.separator.x12"
            },
            "2": {
              "name": "support.variable.segment.data-element.x12"
            }
          }
        },
        {
          "name": "meta.segment.component-element.x12",
          "match": "([:>])([\\w+\\(\\)'&\"! ,\\-\\./;\\?=%@\\[\\]_\\{\\}\\\\|<#$]*)",
          "captures": {
            "1": {
              "name": "keyword.operator.segment.component-element.separator.x12"
            },
            "2": {
              "name": "support.other.segment.component-element.x12"
            }
          }
        },
        {
          "name": "keyword.other.segment.separator.x12",
          "match": "\\~"
        }
      ]
    }
  },
  "scopeName": "source.x12"
}
