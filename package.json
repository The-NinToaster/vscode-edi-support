{
  "name": "edi-edifact-support",
  "displayName": "edi-edifact-support",
  "description": "Provides basic support for the EDI EDIFACT format and highlighting.",
  "version": "0.2.1",
  "publisher": "DericLee",
  "author": {
    "email": "dericl@Kasoftware.cn",
    "name": "Deric Lee"
  },
  "engines": {
    "vscode": "^1.78.0"
  },
  "license": "MIT",
  "homepage": "https://github.com/hellooops/vscode-edi-edifact-support/blob/main//README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/hellooops/vscode-edi-edifact-support.git"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Other"
  ],
  "icon": "docs/images/icon-128x128.png",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "edifact",
        "aliases": [
          "Electronic Data Interchange (EDIFACT)",
          "edifact",
          "EDIFACT"
        ],
        "extensions": [
          ".edi",
          ".edifact"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "edifact",
        "scopeName": "source.edifact",
        "path": "./syntaxes/edifact.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "edi-edifact-support.prettify",
        "title": "Prettify (format using new lines)",
        "category": "EDI EDIFACT Support"
      },
      {
        "command": "edi-edifact-support.minify",
        "title": "Minify (format without new lines)",
        "category": "EDI EDIFACT Support"
      }
    ],
    "configuration": {
      "title": "EDI EDIFACT Support",
      "properties": {
        "ediEdifactSupport.enableCodelens": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable codelens for EDI EDIFACT messages."
        },
        "ediEdifactSupport.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable hover for EDI EDIFACT messages."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
